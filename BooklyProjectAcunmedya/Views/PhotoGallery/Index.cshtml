@model List<BooklyProjectAcunmedya.Entities.PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Fotoğraflar</h2>
<br />

@{ 
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Fotoğraf</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:60px;height:60px"/></td>
            <td><a href="/PhotoGallery/DeletePhoto/@item.PhotoGalleryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/PhotoGallery/UpdatePhoto/@item.PhotoGalleryId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<td><a href="/PhotoGallery/CreatePhoto/" class="btn btn-outline-primary">Yeni Fotoğraf</a></td>